#!/bin/sh

dir=$(hyprctl monitors | grep -m 1 transform | awk '{print $2}')

if [ -v HYPR_4K ]; then
    scale=2
else
    scale=auto
fi
if [ $dir -eq 0 ]; then
    dir=1
    ori=orientationbottom
else
    dir=0
    ori=orientationleft
fi
hyprctl --batch "keyword monitor ,highrr,auto,$scale,transform,$dir ; dispatch layoutmsg $ori"
